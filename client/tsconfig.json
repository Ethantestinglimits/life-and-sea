{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "src",
      "paths": {
          "@/*": ["../*"],
          "@config/*": ["../config/*"],
          "@element/*": ["components/elements/*"],
          "@layout/*": ["components/layouts/*"],
          "@module/*": ["components/modules/*"],
          "@template/*": ["components/templates/*"],
          "@context/*": ["context/*"],
          "@hook/*": ["hooks/*"],
          "@util/*": ["utils/*"],
          "@style/*": ["../public/styles/*"]
      }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}


